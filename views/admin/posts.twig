{% extends "layout.twig" %}

{% block content %}

  <main class="col">
    <h2 class="display-4">
      All posts
      <small class="text-muted">
        <a href="{{ 'admin/posts/new' | url }}" class="btn btn-primary">New post</a>
      </small>
    </h2>
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Title</th>
          <th>Author</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        {% for post in posts %}
          <tr>
            <td>May 9, 2018</td>
            <td>{{ post.title }}</td>
            <td>Kate Austen</td>
            <td>Edit</td>
            <td>Delete</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </main>

{% endblock %}